{
  "name": "universal-data-tool",
  "version": "0.3.2",
  "license": "MIT",
  "main": "desktop/main.js",
  "homepage": "https://universaldatatool.com",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "cross-env PORT=6001 react-scripts start",
    "build": "npm run build:babel && npm run build:desktop",
    "build:babel": "cross-env NODE_ENV=production babel ./src --out-dir=./lib && cp ./package.json ./lib/package.json",
    "build:web": "react-scripts build",
    "build:desktop": "cross-env REACT_APP_DESKTOP=true PUBLIC_URL=./ react-scripts build",
    "start:desktop": "electron ./desktop",
    "release:lib": "npm run build && cd lib && npm publish",
    "release:desktop": "npm run build:desktop && electron-builder --mac --windows --linux --publish always",
    "release": "npm run release:lib && npm run release:desktop",
    "test": "react-scripts test",
    "storybook": "start-storybook -p 6002 -s public",
    "build-storybook": "build-storybook -s public",
    "gh-pages": "npm run build:app && cp ./CNAME ./build/CNAME && gh-pages -d build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.4",
    "@material-ui/core": "^4.6.1",
    "@material-ui/icons": "^4.2.1",
    "@storybook/addon-actions": "^5.1.9",
    "@storybook/addon-links": "^5.1.9",
    "@storybook/addons": "^5.1.9",
    "@storybook/react": "^5.1.9",
    "chroma-js": "^2.0.4",
    "electron": "^8.0.0",
    "electron-builder": "^22.3.2",
    "gh-pages": "^2.1.1",
    "material-survey": "^1.0.32",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-markdown": "^4.1.0",
    "react-nlp-annotate": "^0.1.21",
    "react-scripts": "3.0.1",
    "spelling": "^2.0.1"
  },
  "dependencies": {
    "@material-ui/styles": "^4.9.0",
    "brace": "^0.11.1",
    "react-ace": "^7.0.4",
    "react-data-table-component": "^6.2.2",
    "react-dropzone": "^10.1.8",
    "react-image-annotate": "^0.1.34",
    "react-select": "^3.0.8",
    "styled-components": "^5.0.0"
  },
  "build": {
    "appId": "com.universaldatatool",
    "productName": "Universal Data Tool",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "dmg": {
      "icon": false
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    },
    "extends": null
  }
}
